<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_flash2_land" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/upperPlace"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_125sdp"
            android:translationZ="@dimen/_2sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:gravity="center">


                <ImageView
                    android:id="@+id/winsAmount"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/area_gold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="163dp"
                    android:layout_height="36dp"
                    android:layout_alignStart="@id/winsAmount"
                    android:layout_alignTop="@id/winsAmount"
                    android:layout_alignEnd="@id/winsAmount"
                    android:layout_alignBottom="@id/winsAmount"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:id="@+id/winsWord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/foooont"
                        android:gravity="center"
                        android:shadowColor="@color/white"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        android:text="WINS "
                        android:textColor="@color/input_color"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.368"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.555" />

                    <TextView
                        android:id="@+id/winsCount"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/winsWord"
                        android:fontFamily="@font/air_millhouse_italic"
                        android:shadowColor="@color/white"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        android:text="0"
                        android:textColor="@color/input_color"
                        android:textSize="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.212"
                        app:layout_constraintStart_toEndOf="@id/winsWord"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.65" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:gravity="center">


                <ImageView
                    android:id="@+id/balance"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/area_gold" />

                <RelativeLayout
                    android:id="@+id/parent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@id/balance"
                    android:layout_alignTop="@id/balance"
                    android:layout_alignEnd="@id/balance"
                    android:layout_alignBottom="@id/balance"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="-1dp">

                    <TextView
                        android:id="@+id/balanceW"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginBottom="9dp"
                        android:fontFamily="@font/air_millhouse_italic"
                        android:gravity="center"
                        android:shadowColor="@color/white"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        android:text="Balance"
                        android:textColor="@color/input_color"
                        android:textSize="@dimen/_18sdp" />

                    <TextView
                        android:id="@+id/resultBalance"
                        android:layout_width="88dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_toEndOf="@id/balanceW"
                        android:ems="6"
                        android:fontFamily="@font/air_millhouse_italic"
                        android:gravity="center"
                        android:shadowColor="@color/white"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        android:text="12345"
                        android:textColor="@color/input_color"
                        android:textSize="@dimen/_14sdp" />


                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/_10sdp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_240sdp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.45">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/num1"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_gravity="center"
                            android:tag="0"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:src="@drawable/quest" />

                        <ImageView
                            android:id="@+id/num2"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_gravity="center"
                            android:tag="1"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:src="@drawable/quest" />

                        <ImageView
                            android:id="@+id/num3"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_gravity="center"
                            android:tag="2"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:src="@drawable/quest" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/num4"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_gravity="center"
                            android:tag="3"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:src="@drawable/quest" />

                        <ImageView
                            android:id="@+id/num5"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_gravity="center"
                            android:tag="4"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:src="@drawable/quest" />

                        <ImageView
                            android:id="@+id/num6"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_gravity="center"
                            android:tag="5"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:src="@drawable/quest" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/num7"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_gravity="center"
                            android:tag="6"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:src="@drawable/quest" />

                        <ImageView
                            android:id="@+id/num8"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_gravity="center"
                            android:tag="7"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:src="@drawable/quest" />

                        <ImageView
                            android:id="@+id/num9"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_gravity="center"
                            android:tag="8"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:src="@drawable/quest" />


                    </LinearLayout>


                </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/_1sdp"
                android:layout_gravity="center"
                android:layout_weight="1">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.9">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:orientation="horizontal">


                        <ImageButton
                            android:id="@+id/decremBet"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/transparent_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:scaleType="fitCenter"
                            android:textAlignment="center"
                            app:srcCompat="@drawable/btn_decr_viol" />

                        <RelativeLayout
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_3sdp">


                            <ImageView
                                android:id="@+id/bgBet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/bet_gold" />



                            <TextView
                                android:id="@+id/choosenBet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@id/bgBet"
                                android:layout_alignTop="@id/bgBet"
                                android:layout_alignEnd="@id/bgBet"
                                android:layout_alignBottom="@id/bgBet"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/air_millhouse_italic"
                                android:gravity="center"
                                android:text="200"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_25sdp" />


                        </RelativeLayout>

                        <ImageButton
                            android:id="@+id/incremBet"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/transparent_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/btn_incr_viol"
                            android:textAlignment="center" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_55sdp"
                            android:layout_gravity="center"
                            android:gravity="center">


                            <ImageView
                                android:id="@+id/btnSpin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/spin_viol" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@id/btnSpin"
                                android:layout_alignTop="@id/btnSpin"
                                android:layout_alignEnd="@id/btnSpin"
                                android:layout_alignBottom="@id/btnSpin"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:fontFamily="@font/air_millhouse_italic"
                                android:gravity="center"
                                android:text="Spin"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_30sdp" />


                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="121dp"
                    android:layout_height="124dp"
                    android:layout_marginBottom="-5sp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.392"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/cop" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>