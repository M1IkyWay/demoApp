    <ImageView
        android:id="@+id/cop"
        android:layout_width="104dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78"
        app:srcCompat="@drawable/cop" />

    <LinearLayout
        android:id="@+id/bet_block"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_200sdp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.864">

        <ImageView
            android:id="@+id/btn_up"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/btn_up"
            android:clickable="true"
            android:scaleType="center"
            android:focusable="true"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/betNumber"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/air_millhouse_italic"
            android:shadowColor="@color/shadow_color"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="0"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/white"/>


        <ImageView
            android:id="@+id/btn_down"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/btn_down"
            android:clickable="true"
            android:scaleType="center"
            android:focusable="true"
            android:layout_weight="1"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dfd"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/bet_block"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.788">

        <ImageView
            android:id="@+id/btnRotate"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_rotate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

        <ImageView
            android:id="@+id/roundArrow"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/arrow_rotate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/dsfsd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">

        <LinearLayout
            android:id="@+id/dvv"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_50sdp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/balanceW"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="@font/air_millhouse_italic"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:text="Balance"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/balance"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_17sdp"
                android:fontFamily="@font/air_millhouse_italic"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:text="1234567"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/white"/>



        </LinearLayout>



        <LinearLayout
            android:id="@+id/da"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_50sdp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/winW"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="@font/air_millhouse_italic"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:text="Total win"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/scoreWin"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_17sdp"
                android:fontFamily="@font/air_millhouse_italic"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:text="0"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/white"/>



        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/butt_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/arrow_back" />


</androidx.constraintlayout.widget.ConstraintLayout>