<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/air_millhouse_italic"
        android:gravity="center"
        android:lines="2"
        android:shadowColor="@color/shadow_color"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="@string/sign_up_to_play"
        android:textColor="@color/white"
        android:textSize="@dimen/_55sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/signViaPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/signPhone"
            android:layout_width="312dp"
            android:layout_height="129dp"
            android:clickable="true"
            android:contentDescription="@string/button_play_"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_bg"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="389dp" />

        <TextView
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/_18sdp"
            android:fontFamily="@font/air_millhouse_italic"
            android:gravity="center"
            android:text="@string/via_phone"
            android:textColor="@color/white"
            android:textSize="@dimen/_35sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signViaEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="436dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/signEmail"
            android:layout_width="312dp"
            android:layout_height="129dp"
            android:clickable="true"
            android:contentDescription="@string/button_play_"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_bg"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="389dp" />


        <TextView
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/_18sdp"
            android:fontFamily="@font/air_millhouse_italic"
            android:gravity="center"
            android:text="@string/via_email"
            android:textColor="@color/white"
            android:textSize="@dimen/_35sdp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/anonMode"
        android:layout_width="301dp"
        android:layout_height="81dp"
        android:layout_marginTop="600dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/air_millhouse_italic"
        android:gravity="center"
        android:shadowColor="@color/shadow_color"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="@string/anonymous_mode"
        android:textColor="@color/material_dynamic_tertiary60"
        android:textSize="@dimen/_35sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>