<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/_245sdp"
        android:layout_height="@dimen/_205sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <ScrollView
            android:id="@+id/column1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/scrollContentColumn1"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/column1Ima"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im1" />

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im2" />

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im3" />

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im4" />

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im5" />

            </LinearLayout>
        </ScrollView>


        <ScrollView
            android:id="@+id/column2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/scrollContentColumn2"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im5" />

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im4" />

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im3" />

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im2" />

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im1" />

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/column3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/scrollContentColumn3"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im4" />

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im3" />

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im5" />

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im1" />

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hot_im2" />


            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <ImageView
        android:id="@+id/marginGame"
        android:layout_width="400dp"
        android:layout_height="304dp"
        android:src="@drawable/hot_field" />

</RelativeLayout>